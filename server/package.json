{
	"name": "auth-gateway-service",
	"version": "0.0.1",
	"description": "A centralized NestJS API for user authentication, supporting JWT, Okta, AWS Cognito, and generic OAuth/OIDC providers, designed for AWS Lambda deployment.",
	"author": "Exquis App Factory",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"build:layer": "rimraf dist-layer && mkdir -p dist-layer/nodejs && cp package.json dist-layer/nodejs && npm install --omit=dev --prefix dist-layer/nodejs",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --no-fix",
		"lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"synth:layer": "cdk synth -c which=layer --toolkit-stack-name sample-app-toolkit --verbose",
		"synth:staging": "cdk synth -c which=api-staging --toolkit-stack-name sample-app-toolkit --verbose"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.6",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.6",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/mapped-types": "*",
		"@nestjs/mongoose": "^11.0.3",
		"@nestjs/platform-express": "^11.1.6",
		"@nestjs/swagger": "^11.2.0",
		"bcryptjs": "^3.0.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"helmet": "^8.1.0",
		"mongoose": "^8.18.2",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"swagger-ui-express": "^5.0.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.7",
		"@nestjs/testing": "^11.1.6",
		"@types/aws-lambda": "^8.10.152",
		"@types/bcryptjs": "^2.4.6",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.3.1",
		"@types/source-map-support": "^0.5.10",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.43.0",
		"@typescript-eslint/parser": "^8.43.0",
		"aws-cdk-lib": "^2.214.0",
		"constructs": "^10.4.2",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"jest": "^30.2.0",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.4",
		"terser-webpack-plugin": "^5.3.14",
		"ts-jest": "^29.4.4",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
